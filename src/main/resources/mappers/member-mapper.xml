<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Member">
	<select id="listMember" resultType="Member">
		select * from member
	</select>
	<insert id="insertMember" parameterType="Member" statementType="PREPARED">
		INSERT INTO MEMBER VALUES
		(#{m_id}, #{m_pwd}, #{m_name}, #{m_email})
	</insert>
	<update id="updateMember" parameterType="Member" statementType="PREPARED">
		UPDATE MEMBER SET
		M_PWD = #{m_pwd},
		M_EMAIL = #{m_email}
		WHERE M_ID = #{m_id}
	</update>
	<delete id="deleteMember" parameterType="string" statementType="PREPARED">
		DELETE FROM MEMBER
		WHERE M_ID = #{m_id}
	</delete>
	<select id="loginMember" parameterType="Member">
		SELECT * FROM MEMBER
		WHERE M_ID = #{m_id} AND 
		M_PWD = #{m_pwd}
	</select>
	<select id="checkOverId" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM MEMBER
		WHERE M_ID = #{m_id}
	</select>
</mapper>
