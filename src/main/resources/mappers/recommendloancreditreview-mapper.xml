<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="RecommendLoanCreditReview">
	<resultMap id="resultRecommendLoanCreditReview" type="RecommendLoanCreditReview">
		<id property="RLR_NUM" column="RLR_NUM"/>
		<result property="RLR_AST" column="RLR_AST"/>
		<result property="RLR_COMMENT" column="RLR_COMMENT"/>
		<result property="RL_CR_NUM" column="RL_CR_NUM"/>
		<result property="M_ID" column="M_ID"/>
	</resultMap>
	
	<!-- 해당 대출에 대한 리뷰 리스트 조회 -->
	<select id="listRecommendLoanCreditReview" parameterType="string" resultType="arraylist" resultMap="resultRecommendLoanCreditReview">
		select * from RECOMMEND_LOAN_CR_REVIEW where RL_CR_NUM = #{RL_CR_NUM}
	</select>
	
	<!-- 페이지별 -->
	<select id="selectCreditReviewList" resultMap="RecommendLoanCreditReview">
		select * from RECOMMEND_LOAN_CR_REVIEW where RL_CR_NUM = #{RL_CR_NUM}
	</select>
	
	<!-- 리뷰 정보 totalCount -->
	<select id="loanCreditReviewCount" resultType="int">
		select count(*) from RECOMMEND_LOAN_CR_REVIEW
	</select>
	
	<!-- 리뷰 입력 -->
	<insert id="insertRecommendLoanCreditReview" parameterType="RecommendLoanCharterReview" flushCache="true" statementType="PREPARED" timeout="20">
		insert into RECOMMEND_LOAN_CR_REVIEW VALUES(
			'RLCRR'||LPAD(RECOMMEND_LOAN_CR_REVIEW_SEQ.NEXTVAL,2,'0'),
			#{RLR_NUM}, #{RLR_AST}, #{RLR_COMMENT}, #{RL_CR_NUM}, #{M_ID}
		)
	</insert>

</mapper>