<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="RecommendLoanReview">
	<resultMap type="RecommendLoanReview" id="resultRecommendLoanReview">
		<id property="RLR_NUM" column="RLR_NUM"/>
		<result property="RLR_AST" column="RLR_AST"/>
		<result property="RLR_COMMENT" column="RLR_COMMENT"/>
		<result property="RL_NUM" column="RL_NUM"/>
		<result property="M_ID" column="M_ID"/>
	</resultMap>
	
	<!-- 해당 대출에 대한 리뷰 리스트 조회 -->
	<select id="listRecommendLoanReview" resultType="arraylist" resultMap="resultRecommendLoanReview">
		select * from RECOMMEND_LOAN_REVIEW where RL_NUM = #{RL_NUM}
	</select>
	
	<!-- 페이지별 -->
	<select id="selectReviewList" parameterType="String" resultType="arraylist" resultMap="resultRecommendLoanReview">
		select * from RECOMMEND_LOAN_REVIEW where RL_NUM = #{RL_NUM}
	</select>
	
	<!-- 리뷰 정보 totalCount -->
	<select id="loanReviewCount" resultType="int">
		select count(*) from RECOMMEND_LOAN_REVIEW
	</select>
	
	<!-- 리뷰 입력 -->
	<insert id="insertRecommendLoanReview" parameterType="RecommendLoanReview" flushCache="true" statementType="PREPARED" timeout="20">
		insert into RECOMMEND_LOAN_REVIEW (RLR_NUM, RLR_AST, RLR_COMMENT, RL_NUM, M_ID)
		values ((select NVL(MAX(RLR_NUM)+1, 1)from RECOMMEND_LOAN_REVIEW), #{RLR_AST}, #{RLR_COMMENT}, #{RL_NUM}, #{M_ID})
	</insert>
	
	<!-- 리뷰 수정 -->
	<select id="updateRecommendLoanReview">
		update RECOMMEND_LOAN_REVIEW set RLR_NUM=?, RLR_AST=?, RLR_COMMEND=?
		where RLR_NUM=?
	</select>
	
	<!-- 리뷰 삭제 -->
	<delete id="deleteRecommendLoanReview">
		delete from RECOMMEND_LOAN_REVIEW where RLR_NUM=?
	</delete>
</mapper>